<div class="contents row">
  <p><%= @nickname %>さんの投稿一覧</p>
  <% @posts.each do |post| %>
  <div class="post-title">
  <%= post.title %>
</div>
<div class="post__image">
  <%= image_tag post.image.variant(resize: '300x300'), class: 'post-image' if post.image.attached? %>
</div>
<div class="post-text">
  <%= post.text %>
</div>
<div class="post-lure">
  <%= post.lure.name %>
</div>
  <% end %>
</div>